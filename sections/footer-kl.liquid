<style>
  .footer-kings {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
    position: relative;
  }

  {% if section.settings.show_banner_image and section.settings.banner_background_image != blank %}
  .footer-kings::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: {{ section.settings.banner_height }}px;
    background-image: url('{{ section.settings.banner_background_image | image_url: width: 1200 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .footer-kings::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: {{ section.settings.banner_height }}px;
    background: {{ section.settings.banner_overlay_color }};
    opacity: {{ section.settings.banner_overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }
  {% endif %}

  .footer__container {
    position: relative;
    z-index: 2;
    {% if section.settings.show_banner_image %}
    padding-top: {{ section.settings.banner_height | minus: 100 }}px;
    {% endif %}
  }

  .footer__columns {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: {{ section.settings.columns_gap }}px;
