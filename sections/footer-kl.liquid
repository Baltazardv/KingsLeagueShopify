<script>
  function toggleExpandable(header) {
    const section = header.parentElement;
    const allSections = document.querySelectorAll('.footer__expandable-section');

    // Cerrar todas las otras secciones
    allSections.forEach(s => {
      if (s !== section) {
        s.classList.remove('active');
      }
    });

    // Toggle la secci√≥n actual
    section.classList.toggle('active');
  }

  // Cerrar secciones al hacer clic fuera
  document.addEventListener('click', function(e) {
    if (!e.target.closest('.footer__expandable-section')) {
      document.querySelectorAll('.footer__expandable-section.active').forEach(section => {
        section.classList.remove('active');
      });
    }
  });
</script>
