    },
    {
      "type": "brand_information",
      "name": "Información de Marca",
      "settings": [
        {
          "type": "paragraph",
          "content": "Configure la información de su marca en Configuración del tema"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "default": true,
          "label": "Mostrar redes sociales"
        }
      ]
    },
    {
      "type": "text",
      "name": "Texto",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Título",
          "label": "Título"
        },
        {
          "type": "richtext",
          "id": "subtext",
          "default": "<p>Comparta información de contacto, detalles de la tienda y contenido de marca con sus clientes.</p>",
          "label": "Texto"
        }
      ]
    },
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 550,
          "step": 5,
          "unit": "px",
          "label": "Ancho",
          "default": 100
        },
        {
          "type": "select",
          "id": "alignment",
          "label": "Alineación",
          "options": [
            {"value": "", "label": "Izquierda"},
            {"value": "center", "label": "Centro"},
            {"value": "right", "label": "Derecha"}
          ],
          "default": "center"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Esquema de colores",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "📧 Newsletter Section"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "Activar sección newsletter"
    },
    {
      "type": "image_picker",
      "id": "newsletter_bg_image",
      "label": "Imagen de fondo newsletter"
    },
    {
      "type": "select",
      "id": "newsletter_bg_size",
      "label": "Tamaño imagen fondo (Desktop)",
      "options": [
        {"value": "cover", "label": "Cubrir"},
        {"value": "contain", "label": "Ajustar"},
        {"value": "100% 100%", "label": "Estirar"}
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "newsletter_bg_position",
      "label": "Posición imagen fondo (Desktop)",
      "options": [
        {"value": "center center", "label": "Centro"},
        {"value": "center top", "label": "Centro arriba"},
        {"value": "center bottom", "label": "Centro abajo"},
        {"value": "left center", "label": "Izquierda"},
        {"value": "right center", "label": "Derecha"}
      ],
      "default": "center center"
    },
    {
      "type": "select",
      "id": "newsletter_bg_size_mobile",
      "label": "Tamaño imagen fondo (Móvil)",
      "options": [
        {"value": "cover", "label": "Cubrir"},
        {"value": "contain", "label": "Ajustar"},
        {"value": "100% 100%", "label": "Estirar"}
      ],
      "default": "cover"
    },
    {
      "type": "select",
      "id": "newsletter_bg_position_mobile",
      "label": "Posición imagen fondo (Móvil)",
      "options": [
        {"value": "center center", "label": "Centro"},
        {"value": "center top", "label": "Centro arriba"},
        {"value": "center bottom", "label": "Centro abajo"}
      ],
      "default": "center center"
    },
    {
      "type": "select",
      "id": "newsletter_overlay_style",
      "label": "Estilo overlay newsletter",
      "options": [
        {"value": "linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0))", "label": "Sin overlay"},
        {"value": "linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))", "label": "Oscuro ligero"},
        {"value": "linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5))", "label": "Oscuro medio"},
        {"value": "linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7))", "label": "Oscuro fuerte"}
      ],
      "default": "linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5))"
    },
    {
      "type": "range",
      "id": "newsletter_overlay_opacity",
